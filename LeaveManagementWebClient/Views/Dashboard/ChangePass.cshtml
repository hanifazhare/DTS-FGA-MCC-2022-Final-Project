@{
    ViewData["Title"] = "Change Password Page";
    Layout = "_MainLayout";
}

<h1>Change Password</h1>

<h4>Password</h4>
<hr />

<div class="row">
    <div class="col-md-8">
        <form action="/Dashboard/ChangePass" method="post">
            <div class="form-group">
                <label name="email" class="control-label">Email</label>
                <input name="email" class="form-control" id="email" type="email" />
            </div>
            <div class="form-group">
                <label name="oldPassword" class="control-label">Old Password</label>
                <input name="oldPassword" class="form-control" id="oldPassword" />
            </div>
            <div class="form-group">
                <label name="newPassword" class="control-label">New Password</label>
                <input name="newPassword" class="form-control" id="newPassword" />
            </div>
            <div class="text-center">
                <a class="btn btn-primary btn-user btn-block" href="#">Change Password</a>
            </div>
        </form>
    </div>
</div>